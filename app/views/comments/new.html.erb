<div class="topic-index-wrapper">
  <div class="comment-new-wrapper" >
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-auther">
              <%=@topic.user.name %>
            </h2>
            <%= image_tag @topic.image.url %>
            <% if !@topic.favorite_users.include?(current_user) %>
              <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <%= @topic.favorite_users.count %>
            <% else %>
              <%= image_tag 'icons/heart-icon-red.png', class: 'topic-index-icon-active' %>
              <%= @topic.favorite_users.count %>
            <% end %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p>
              <%= @topic.description %>
            </p>
            <h3>
              コメント
            </h3>
            <% @topic.comments.each do |comment|%>
            <div>
              <%= comment.content %>
                <%= link_to '削除',  [@topic, comment], confirm: 'Are you sure?', method: :delete %>
            </div>
            <% end %>
            <%= form_for [@topic, @comment] do |f| %>
              <%= f.text_field :content %>
              <br>
              <%= f.submit 'コメントする' %>
            <% end %>
            <%= link_to topics_path do %>
            　<p>一覧</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>